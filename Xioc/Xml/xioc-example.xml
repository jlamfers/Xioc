<?xml version="1.0" encoding="utf-8" ?>
<xioc>
  <bind service-type="srvType" implementation-type="implType" lifestyle="Transient">
    <dependencies>
      <add name="parname" value="parvalue"/>
    </dependencies>
  </bind>
  <decorate service-type="srvType" decorator-type="decType" lifestyle="PerScope"/>
  <decorate service-type="srvType" interceptor-type="intercType"/>
  <bind-all-of service-type="srvType" lifestyle="PerContainer" if-not-can-be-resolved="true"/>
  <bind-xioc-exports path="path"/>
  <bind-mef-exports default-lifestyle="Transient" path="path"/>
  <if-debug>
    <bind service-type="Xioc.Test.IFoo, Xioc.Test" implementation-type="Xioc.Test.Foo, Xioc.Test" lifestyle="Transient"/>
  </if-debug>
  <if-debug>
    <bind-xml uri="debug.xml"/>
    <return/>
  </if-debug>

  <on-new-scope level="1">
    <if>
      <condition>
        <user any-of="administrator"/>
      </condition>
    </if>
    <then>
      <decorate service-type="srvType" decorator-type="decType" lifestyle="transient"/>
    </then>
  </on-new-scope>

  <if>
    <condition>
      <any >
        <user any-of="jan" type="windows|application|thread|http"/>
        <role any-of="a,b,c" type="windows"/>
        <role all-of="d,e,f"/>
        <debug/>
        <true/>
        <false/>
      </any>
      <all >
        <true/>
      </all>
      <not>
        <any>
          <false/>
          <false/>
        </any>
      </not>
    </condition>
    <then>
      <!-- custom-->
      <debug-write text="THEN -> YEP!" />
    </then>
    <else>
      <debug-write text="ELSE -> YEP!" />
    </else>
  </if>
</xioc>

